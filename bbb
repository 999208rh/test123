<script>
  const orders = [];

  const orderIdInput = document.getElementById('orderId');
  const customerInput = document.getElementById('customerName');
  const foodInput = document.getElementById('foodItem');
  const quantityInput = document.getElementById('quantity');
  const addressInput = document.getElementById('address');
  const deliveryInput = document.getElementById('deliveryBoy');

  const tableBody = document.getElementById('tableBody');
  const totalOrders = document.getElementById('totalOrders');

  const addBtn = document.getElementById('addBtn');
  const showAllBtn = document.getElementById('showAllBtn');
  const searchBtn = document.getElementById('searchBtn');
  const deleteBtn = document.getElementById('deleteBtn');

  function updateOrderCount() {
    totalOrders.innerText = `–í—Å–µ–≥–æ –∑–∞–∫–∞–∑–æ–≤: ${orders.length}`;
  }

  function renderTable(filteredOrders = null) {
    tableBody.innerHTML = '';
    const list = filteredOrders || orders;
    list.forEach(order => {
      const row = document.createElement('tr');

      row.innerHTML = `
        <td class="border px-4 py-2">${order.orderId}</td>
        <td class="border px-4 py-2">${order.customerName}</td>
        <td class="border px-4 py-2">${order.foodItem}</td>
        <td class="border px-4 py-2">${order.quantity}</td>
        <td class="border px-4 py-2">${order.address}</td>
        <td class="border px-4 py-2">${order.deliveryBoy}</td>
        <td class="border px-4 py-2 text-center"><input type="checkbox" class="selectCheckbox"></td>
      `;
      tableBody.appendChild(row);
    });
  }

  addBtn.addEventListener('click', () => {
    const id = orderIdInput.value.trim();
    const cust = customerInput.value.trim();
    const food = foodInput.value.trim();
    const qty = quantityInput.value.trim();
    const addr = addressInput.value.trim();
    const boy = deliveryInput.value.trim();

    if (!id || !cust || !food || !qty || !addr || !boy) {
      alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è!');
      return;
    }

    const newOrder = { orderId: id, customerName: cust, foodItem: food, quantity: qty, address: addr, deliveryBoy: boy };
    orders.push(newOrder);
    renderTable();
    // –û—á–∏—Å—Ç–∫–∞ –ø–æ–ª–µ–π
    orderIdInput.value = '';
    customerInput.value = '';
    foodInput.value = '';
    quantityInput.value = '';
    addressInput.value = '';
    deliveryInput.value = '';
    updateOrderCount();
  });

  document.getElementById('showAllBtn').addEventListener('click', () => {
    renderTable();
  });

  document.getElementById('searchBtn').addEventListener('click', () => {
    const searchName = document.getElementById('searchCustomer').value.trim().toLowerCase();
    const filtered = orders.filter(o => o.customerName.toLowerCase().includes(searchName));
    renderTable(filtered);
  });

  document.getElementById('deleteBtn').addEventListener('click', () => {
    const checkboxes = document.querySelectorAll('.selectCheckbox');
    const rows = document.querySelectorAll('#tableBody tr');
    const idsToRemove = [];

    checkboxes.forEach((cb, index) => {
      if (cb.checked) {
        idsToRemove.push(orders[index].orderId);
      }
    });

    for (let i = orders.length - 1; i >= 0; i--) {
      if (idsToRemove.includes(orders[i].orderId)) {
        orders.splice(i, 1);
      }
    }
    renderTable();
    updateOrderCount();
  });

  // –ù–∞—á–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
  orders.push(new FoodOrder("F001", "John", "Burger", "2", "123 Main St", "Alex"));
  orders.push(new FoodOrder("F002", "Emily", "Pizza", "1", "456 Elm St", "Brian"));
  renderTable();
  updateOrderCount();
</script>
