<script>
  const applications = [];

  const nameInput = document.getElementById('name');
  const emailInput = document.getElementById('email');
  const jobTitleInput = document.getElementById('jobTitle');
  const qualificationInput = document.getElementById('qualification');

  const tableBody = document.getElementById('tableBody');
  const totalApplications = document.getElementById('totalApplications');

  const applyBtn = document.getElementById('applyBtn');
  const showAllBtn = document.getElementById('showAllBtn');

  function updateApplicationCount() {
    totalApplications.innerText = `–í—Å–µ–≥–æ –∑–∞—è–≤–æ–∫: ${applications.length}`;
  }

  function renderTable(filteredApplications = null) {
    tableBody.innerHTML = '';
    const list = filteredApplications || applications;
    list.forEach(app => {
      const row = document.createElement('tr');

      row.innerHTML = `
        <td class="border px-4 py-2">${app.name}</td>
        <td class="border px-4 py-2">${app.email}</td>
        <td class="border px-4 py-2">${app.jobTitle}</td>
        <td class="border px-4 py-2">${app.qualification}</td>
        <td class="border px-4 py-2 text-center"><input type="checkbox" class="selectCheckbox"></td>
      `;
      tableBody.appendChild(row);
    });
  }

  document.getElementById('applyBtn').addEventListener('click', () => {
    const name = nameInput.value.trim();
    const email = emailInput.value.trim();
    const jobTitle = jobTitleInput.value.trim();
    const qualification = qualificationInput.value.trim();

    if (!name || !email || !jobTitle || !qualification) {
      alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è!');
      return;
    }

    applications.push({ name, email, jobTitle, qualification });
    renderTable();
    // –û—á–∏—Å—Ç–∫–∞ —Ñ–æ—Ä–º—ã
    nameInput.value = '';
    emailInput.value = '';
    jobTitleInput.value = '';
    qualificationInput.value = '';
    updateApplicationCount();
  });

  document.getElementById('showAllBtn').addEventListener('click', () => {
    renderTable();
  });

  // –£–¥–∞–ª–µ–Ω–∏–µ –≤—ã–±—Ä–∞–Ω–Ω—ã—Ö –∑–∞—è–≤–æ–∫
  document.querySelector('button[id="deleteBtn"]')?.addEventListener('click', () => {
    const checkboxes = document.querySelectorAll('.selectCheckbox');
    const emailsToRemove = [];

    checkboxes.forEach((cb, index) => {
      if (cb.checked) {
        emailsToRemove.push(applications[index].email);
      }
    });

    for (let i = applications.length - 1; i >= 0; i--) {
      if (emailsToRemove.includes(applications[i].email)) {
        applications.splice(i, 1);
      }
    }
    renderTable();
    updateApplicationCount();
  });

  // –ò–∑–Ω–∞—á–∞–ª—å–Ω—ã–µ –∑–∞—è–≤–∫–∏
  applications.push({ name: "John Doe", email: "john@mail.com", jobTitle: "Software Developer", qualification: "B.Tech" });
  applications.push({ name: "Jane Smith", email: "jane@mail.com", jobTitle: "Graphic Designer", qualification: "BFA" });
  renderTable();
  updateApplicationCount();
</script>
